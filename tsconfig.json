// @ts-nocheck
{
	"compilerOptions": {
		"strict": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"types": ["@types/jquery"],
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src"],
			"@utils/*": ["./src/utils/*"],
			"@actor/*": ["./src/actor/*"],
			"@item/*": ["./src/item/*"],
			"@journal/*": ["./src/journal/*"],
			"@components/*": ["./src/components/*"],
			"@system/*": ["./src/system/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "**/node_modules/*", "dist/*"]
}
